<Window x:Class="CourseRegistrationSystem.StudentMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseRegistrationSystem"
        mc:Ignorable="d"
        Title="Student Dashboard"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">


    <Window.Resources>
        <!--Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="DodgerBlue"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
        </Style>

        <Style x:Key="SidebarButtonSelectedStyle"
       TargetType="Button"
       BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value= "Gray"/>
            <!-- blue highlight -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Content Area -->
        </Grid.ColumnDefinitions>


        <!-- ================= LEFT SIDEBAR ================= -->
        <Border Grid.Column="0" Background="#f5f5f5">
            <StackPanel>

                <TextBlock x:Name="StudentNameText" 
                    Text="Student Portal"
                           Foreground="DodgerBlue"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="20,25,20,30"
                           HorizontalAlignment="Center"/>

                <!-- Navigation Buttons -->
                <Button x:Name="BtnSchedule" Content="Schedule"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="Sidebar_Click"/>

                <Button x:Name="BtnBrowse" Content="Browse Courses"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="Sidebar_Click"/>

                <Button x:Name="BtnCart" Content="Cart"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="Sidebar_Click"/>

                <Button x:Name="BtnRegister" Content="Register"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="Sidebar_Click"/>

                <Button x:Name="BtnDrop" Content="Drop Course"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="Sidebar_Click"/>

                <Button x:Name="BtnProfile" Content="Profile"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="Sidebar_Click"/>


                <!-- Logout -->
                <Button Content="Logout"
                        Background="#E74C3C"
                        Foreground="White"
                        Height="40"
                        Margin="10"
                        Click="Logout_Click"/>
            </StackPanel>
        </Border>
        <Grid Grid.Column="1" Background="White" Margin="10">

            <!-- update later -->
            <Grid x:Name="SchedulePanel" Visibility="Collapsed">
                <TextBlock Text="Schedule View" FontSize="32" Margin="20"/>
            </Grid>

            <Grid x:Name="BrowsePanel" Visibility="Collapsed">
                <TextBlock Text="Browse Courses View" FontSize="32" Margin="20"/>
            </Grid>

            <Grid x:Name="CartPanel" Visibility="Collapsed">
                <TextBlock Text="Cart View" FontSize="32" Margin="20"/>
            </Grid>

            <Grid x:Name="RegisterPanel" Visibility="Collapsed">
                <TextBlock Text="Registration View" FontSize="32" Margin="20"/>
            </Grid>

            <Grid x:Name="DropPanel" Visibility="Collapsed">
                <TextBlock Text="Drop Course View" FontSize="32" Margin="20"/>
            </Grid>

            <Grid x:Name="ProfilePanel" Visibility="Collapsed">
                <TextBlock Text="Profile View" FontSize="32" Margin="20"/>
            </Grid>

        </Grid>

    </Grid>

</Window>
