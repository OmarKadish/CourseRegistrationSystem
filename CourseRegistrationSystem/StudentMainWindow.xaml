<Window x:Class="CourseRegistrationSystem.StudentMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseRegistrationSystem"
        mc:Ignorable="d"
        Title="Student Dashboard"
        Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen">


    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="DodgerBlue"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
        </Style>

        <Style x:Key="SidebarButtonSelectedStyle"
       TargetType="Button"
       BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value= "Gray"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Content Area -->
        </Grid.ColumnDefinitions>


        <!-- ================= LEFT SIDEBAR ================= -->
        <Border Grid.Column="0" Background="#f5f5f5">
            <StackPanel>

                <TextBlock x:Name="StudentNameText" 
                    Text="Student Portal"
                           Foreground="DodgerBlue"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="20,25,20,30"
                           HorizontalAlignment="Center"/>

                <!-- Navigation Buttons -->
                <Button x:Name="BtnSchedule" Content="Schedule"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="Sidebar_Click"/>

                <Button x:Name="BtnBrowse" Content="Browse Courses"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="Sidebar_Click"/>

                <Button x:Name="BtnCart" Content="Cart"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="Sidebar_Click"/>

                <Button x:Name="BtnEnroll" Content="Enroll"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="BtnEnroll_Click"/>

                <Button x:Name="BtnDrop" Content="Drop Course"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="Sidebar_Click"/>

                <Button x:Name="BtnProfile" Content="Profile"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="Sidebar_Click"/>


                <!-- Logout -->
                <Button Content="Logout"
                        Background="#E74C3C"
                        Foreground="White"
                        Height="40"
                        Margin="10"
                        Click="Logout_Click"/>
            </StackPanel>
        </Border>
        <Grid Grid.Column="1" Background="White" Margin="10">
            <Grid x:Name="SchedulePanel" Visibility="Collapsed" Margin="20">

                <StackPanel>

                    <!-- Header -->
                    <Grid Margin="0 0 0 15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="My Schedule"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="DodgerBlue"/>

                        <!-- Term Dropdown -->
                        <ComboBox x:Name="TermCombo"
                      Grid.Column="1"
                      Width="180"
                      Height="35"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center"
                      FontSize="16"
                      SelectionChanged="TermCombo_SelectionChanged">
                            <ComboBoxItem Content="Select Term" IsSelected="True" IsEnabled="False"/>
                        </ComboBox>
                    </Grid>

                    <!-- Schedule Grid -->
                    <DataGrid x:Name="ScheduleGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  RowHeight="50"
                  Background="White"
                  BorderBrush="LightGray"
                  BorderThickness="1"
                  ColumnHeaderHeight="40"
                                        CanUserResizeColumns="False"
          CanUserResizeRows="False"
          CanUserSortColumns="False">

                        <DataGrid.Columns>

                            <!-- Status -->
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>

                            <!-- Session -->
                            <DataGridTextColumn Header="Session" Binding="{Binding Session}" Width="400"/>

                            <!-- Class (link-style) -->
                            <DataGridTemplateColumn Header="Class" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ClassLabel}"
                                       Foreground="#2A6FDB"
                                       TextDecorations="Underline"
                                       Cursor="Hand"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Meeting Dates -->
                            <DataGridTemplateColumn Header="Meeting Dates" Width="180">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding StartEndDate}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Days & Times -->
                            <DataGridTemplateColumn Header="Days and Times" Width="180">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding DaysLine1}" />
                                            <TextBlock Text="{Binding DaysLine2}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Room -->
                            <DataGridTextColumn Header="Room" Binding="{Binding Room}" Width="120"/>

                            <!-- Instructor -->
                            <DataGridTextColumn Header="Instructor" Binding="{Binding InstructorName}" Width="160"/>

                            <!-- Seats -->
                            <DataGridTextColumn Header="Seats" Binding="{Binding SeatInfo}" Width="250"/>

                        </DataGrid.Columns>
                    </DataGrid>

                </StackPanel>
            </Grid>
            <DataGrid x:Name="BrowseCoursesGrid"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          HeadersVisibility="Column"
          RowHeight="35"
          ColumnWidth="*"
          Background="WhiteSmoke"
          BorderBrush="Gray"
          BorderThickness="1">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Course Code" Binding="{Binding CourseCode}" Width="120"/>
                    <DataGridTextColumn Header="Course Name" Binding="{Binding CourseName}" Width="240"/>
                    <DataGridTextColumn Header="Credits" Binding="{Binding Credits}" Width="80"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>

                    <!-- Add to Cart Button -->
                    <DataGridTemplateColumn Header="Action" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Add to Cart"
                            Padding="10,2"
                            Tag="{Binding CourseID}"
                            Click="AddToCart_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>

            </DataGrid>

            <Grid x:Name="CartPanel" Visibility="Collapsed">
                <TextBlock Text="Cart View" FontSize="32" Margin="20"/>
            </Grid>

            <Grid x:Name="EnrollPanel" Visibility="Collapsed">
                <TextBlock Text="Registration View" FontSize="32" Margin="20"/>
            </Grid>

            <Grid x:Name="DropPanel" Visibility="Collapsed">
                <TextBlock Text="Drop Course View" FontSize="32" Margin="20"/>
            </Grid>

            <Grid x:Name="ProfilePanel" Visibility="Collapsed" Margin="20">

                <StackPanel>
                    <TextBlock x:Name="ProfileNameText"
                    FontSize="30"
                    FontWeight="Bold"
                    Foreground="DodgerBlue"
                    Margin="0 0 0 25"/>
                    <Border Background="#F7F9FC"
                Padding="20"
                CornerRadius="10"
                BorderBrush="#D0D7E1"
                BorderThickness="1">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="First Name:" 
                           Grid.Row="0" Grid.Column="0" 
                           FontWeight="Bold" FontSize="15" 
                           Margin="0 8"/>
                            <TextBlock x:Name="TxtFirstName" 
                           Grid.Row="0" Grid.Column="1"
                           FontSize="15" Margin="0 8"/>
                            <TextBlock Text="Last Name:" 
                           Grid.Row="1" Grid.Column="0" 
                           FontWeight="Bold" FontSize="15" 
                           Margin="0 8"/>
                            <TextBlock x:Name="TxtLastName" 
                           Grid.Row="1" Grid.Column="1"
                           FontSize="15" Margin="0 8"/>
                            <TextBlock Text="Email:" 
                           Grid.Row="2" Grid.Column="0" 
                           FontWeight="Bold" FontSize="15" 
                           Margin="0 8"/>
                            <TextBlock x:Name="TxtEmail" 
                           Grid.Row="2" Grid.Column="1"
                           FontSize="15" Margin="0 8"/>
                            <TextBlock Text="Contact No:" 
                           Grid.Row="3" Grid.Column="0" 
                           FontWeight="Bold" FontSize="15" 
                           Margin="0 8"/>
                            <TextBlock x:Name="TxtContact" 
                           Grid.Row="3" Grid.Column="1"
                           FontSize="15" Margin="0 8"/>
                            <TextBlock Text="Address:" 
                           Grid.Row="4" Grid.Column="0" 
                           FontWeight="Bold" FontSize="15" 
                           Margin="0 8"/>
                            <TextBlock x:Name="TxtAddress" 
                           Grid.Row="4" Grid.Column="1"
                           FontSize="15" Margin="0 8"/>
                            <TextBlock Text="Birth Date:" 
                           Grid.Row="5" Grid.Column="0" 
                           FontWeight="Bold" FontSize="15" 
                           Margin="0 8"/>
                            <TextBlock x:Name="TxtBirthDate" 
                           Grid.Row="5" Grid.Column="1"
                           FontSize="15" Margin="0 8"/>
                            <TextBlock Text="Major:" 
                           Grid.Row="6" Grid.Column="0" 
                           FontWeight="Bold" FontSize="15" 
                           Margin="0 8"/>
                            <TextBlock x:Name="TxtMajor" 
                           Grid.Row="6" Grid.Column="1"
                           FontSize="15" Margin="0 8"/>
                            <TextBlock Text="Year:" 
                           Grid.Row="7" Grid.Column="0" 
                           FontWeight="Bold" FontSize="15" 
                           Margin="0 8"/>
                            <TextBlock x:Name="TxtYear" 
                           Grid.Row="7" Grid.Column="1"
                           FontSize="15" Margin="0 8"/>

                        </Grid>
                    </Border>
                </StackPanel>

            </Grid>


        </Grid>

    </Grid>

</Window>
