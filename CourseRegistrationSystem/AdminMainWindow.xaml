<Window x:Class="CourseRegistrationSystem.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseRegistrationSystem"
        mc:Ignorable="d"
        Title="Admin Dashboard"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F5F5F5">

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="300">

            <TextBlock Text="Admin Portal"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="DodgerBlue"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 25"/>

            <Button x:Name="BtnOpenCourseWindow"
                    Content="Manage Courses"
                    Height="50"
                    FontSize="18"
                    Background="DodgerBlue"
                    Foreground="White"
                    BorderThickness="0"
                    Click="BtnOpenCourseWindow_Click"/>

        </StackPanel>

    </Grid>
</Window>
