<Window x:Class="CourseRegistrationSystem.CourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseRegistrationSystem"
        mc:Ignorable="d"
        Title="CourseWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <Button x:Name="BtnRefresh" Content="Refresh" Width="90" Margin="0,0,8,0" Click="BtnRefresh_Click"/>
            <Button x:Name="BtnAdd" Content="Add Course" Width="100" Margin="0,0,8,0" Click="BtnAdd_Click"/>
            <Button x:Name="BtnEdit" Content="Edit Selected" Width="110" Margin="0,0,8,0" Click="BtnEdit_Click"/>
            <Button x:Name="BtnDelete" Content="Delete Selected" Width="120" Margin="0,0,8,0" Click="BtnDelete_Click"/>
            <TextBox x:Name="TxtSearch" Width="200" Margin="8,0,0,0" KeyUp="TxtSearch_KeyUp"/>
        </StackPanel>

        <DataGrid x:Name="GridCourses" Grid.Row="1" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CourseID}" Width="60"/>
                <DataGridTextColumn Header="Code" Binding="{Binding CourseCode}" Width="120"/>
                <DataGridTextColumn Header="Name" Binding="{Binding CourseName}" Width="*"/>
                <DataGridTextColumn Header="Credits" Binding="{Binding Credits}" Width="80"/>
                <DataGridTextColumn Header="Prerequisites" Width="200">

                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StatusBar Grid.Row="2" VerticalAlignment="Bottom" Margin="0,8,0,0">
            <StatusBarItem>
                <TextBlock x:Name="TxtStatus">Ready</TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
