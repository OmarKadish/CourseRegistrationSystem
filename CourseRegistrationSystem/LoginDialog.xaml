<Window x:Class="CourseRegistrationSystem.LoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="420" Width="340"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f2f2f2">

    <Grid>
        <Border Background="White"
                CornerRadius="12"
                Padding="20"
                Width="300"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#e0e0e0"
                BorderThickness="1">

            <StackPanel>
                <TextBlock Text="Sign in as:"
                           Margin="5,0,0,5"/>
                <ComboBox x:Name="RoleCombo"
                          Background="White"
                          Height="28"
                          SelectedIndex="0"
                          Margin="0,0,0,15" SelectionChanged="RoleCombo_SelectionChanged"
                          >
                    <ComboBoxItem Content="Student"/>
                    <ComboBoxItem Content="Instructor"/>
                    <ComboBoxItem Content="Office Registrar"/>
                </ComboBox>
                <TextBlock Text="Email" Margin="5,0,0,5"/>
                <TextBox x:Name="emailTextBox" Height="30"
                         Margin="0,0,0,10"
                         Padding="5"
                         >
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <TextBlock Text="Password" Margin="5,0,0,5"/>
                <Border Background="White" CornerRadius="8" BorderBrush="#ABADB3"
                    BorderThickness="1"
                    Padding="2"
                    Margin="0,0,0,5">

                    <PasswordBox x:Name="passwordTextBox"
                        Background="White"
                 BorderThickness="0"
                 Height="25"
                 Padding="5" Width="248"/>
                </Border>
                <Button Content="Sign In"
                        Height="35"
                        Background="DodgerBlue"
                        Foreground="White"
                        BorderThickness="0"
                        Click="Login_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>
        </Border>
    </Grid>

</Window>
