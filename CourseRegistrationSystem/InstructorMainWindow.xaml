<Window x:Class="CourseRegistrationSystem.InstructorMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Instructor Dashboard"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="DodgerBlue"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
        </Style>

        <Style x:Key="SidebarButtonSelectedStyle"
               TargetType="Button"
               BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="#f5f5f5">
            <StackPanel>

                <TextBlock x:Name="InstructorNameText"
                           Text="Instructor Portal"
                           Foreground="DodgerBlue"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="20,25,20,30"
                           HorizontalAlignment="Center"/>
                <Button x:Name="BtnClasses" Content="My Classes"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="Sidebar_Click"/>

                <Button x:Name="BtnRoster" Content="Class Roster"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="Sidebar_Click"/>

                <Button x:Name="BtnProfile" Content="Profile"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="Sidebar_Click"/>

                <Button Content="Logout"
                        Background="#E74C3C"
                        Foreground="White"
                        Height="40"
                        Margin="10"
                        Click="Logout_Click"/>
            </StackPanel>
        </Border>
        <Grid Grid.Column="1" Background="White" Margin="10">
            <Grid x:Name="ClassesPanel" Visibility="Collapsed" Margin="20">
                <StackPanel>
                    <TextBlock Text="My Classes"
                               FontSize="28"
                               FontWeight="Bold"
                               Margin="0 0 0 15"/>

                    <DataGrid x:Name="ClassesGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              RowHeight="35"
                              ColumnWidth="*"
                              Background="WhiteSmoke"
                              BorderBrush="Gray"
                              BorderThickness="1">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Course Code" Binding="{Binding CourseCode}" Width="150"/>
                            <DataGridTextColumn Header="Course Name" Binding="{Binding CourseName}" Width="250"/>
                            <DataGridTextColumn Header="Term" Binding="{Binding TermName}" Width="150"/>
                            <DataGridTextColumn Header="Room" Binding="{Binding Room}" Width="150"/>
                        </DataGrid.Columns>

                    </DataGrid>
                </StackPanel>
            </Grid>
            <Grid x:Name="RosterPanel" Visibility="Collapsed" Margin="20">
                <StackPanel>
                    <TextBlock Text="Class Roster"
                               FontSize="28"
                               FontWeight="Bold"
                               Margin="0 0 0 15"/>

                    <ComboBox x:Name="ClassSelector"
                              Width="300"
                              Margin="0 0 0 20">
                        <ComboBoxItem Content="— Select a class —" IsEnabled="False" IsSelected="True"/>
                    </ComboBox>

                    <DataGrid x:Name="RosterGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              RowHeight="35"
                              ColumnWidth="*"
                              Background="WhiteSmoke"
                              BorderBrush="Gray"
                              BorderThickness="1">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Student" Binding="{Binding StudentName}" Width="200"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="250"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150"/>
                        </DataGrid.Columns>

                    </DataGrid>
                </StackPanel>
            </Grid>
            <Grid x:Name="ProfilePanel" Visibility="Collapsed" Margin="20">

                <StackPanel>
                    <TextBlock x:Name="ProfileNameText"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="DodgerBlue"
                   Margin="0 0 0 25"/>
                    <Border Background="#F7F9FC"
                Padding="20"
                CornerRadius="10"
                BorderBrush="#D0D7E1"
                BorderThickness="1">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="First Name:" Grid.Row="0" Grid.Column="0"
                           FontWeight="Bold" FontSize="15" Margin="0 8"/>
                            <TextBlock x:Name="TxtFirstName" Grid.Row="0" Grid.Column="1"
                           FontSize="15" Margin="0 8"/>
                            <TextBlock Text="Last Name:" Grid.Row="1" Grid.Column="0"
                           FontWeight="Bold" FontSize="15" Margin="0 8"/>
                            <TextBlock x:Name="TxtLastName" Grid.Row="1" Grid.Column="1"
                           FontSize="15" Margin="0 8"/>
                            <TextBlock Text="Email:" Grid.Row="2" Grid.Column="0"
                           FontWeight="Bold" FontSize="15" Margin="0 8"/>
                            <TextBlock x:Name="TxtEmail" Grid.Row="2" Grid.Column="1"
                           FontSize="15" Margin="0 8"/>
                            <TextBlock Text="Department:" Grid.Row="3" Grid.Column="0"
                           FontWeight="Bold" FontSize="15" Margin="0 8"/>
                            <TextBlock x:Name="TxtDepartment" Grid.Row="3" Grid.Column="1"
                           FontSize="15" Margin="0 8"/>
                            <TextBlock Text="Office Location:" Grid.Row="4" Grid.Column="0"
                           FontWeight="Bold" FontSize="15" Margin="0 8"/>
                            <TextBlock x:Name="TxtOffice" Grid.Row="4" Grid.Column="1"
                           FontSize="15" Margin="0 8"/>

                        </Grid>
                    </Border>
                </StackPanel>

            </Grid>



        </Grid>
    </Grid>

</Window>
